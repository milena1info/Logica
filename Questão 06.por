programa {
  funcao inicio() {
      real comprimento, largura, perimetro

        escreva("Digite o comprimento do retângulo: ")
        leia(comprimento)
        
        escreva("Digite a largura do retângulo: ")
        leia(largura)

        perimetro = 2 * (comprimento + largura)

        escreva("O perímetro do retângulo é: ", perimetro)
  }
}
